<!DOCTYPE html>

<html {{ sonata_seo_html_attributes() }}>
<head>
	<meta charset="utf-8" />

	<meta name="viewport" content="width=device-width" />
  {{ sonata_seo_title() }}
  {{ sonata_seo_metadatas() }}
  
{% block stylesheets %}
	<!-- Included CSS Files -->
    <link rel="stylesheet"  href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" media="screen" >

    {% stylesheets 
        'bundles/wncsoldier/stylesheets/foundation.min.css'
        'bundles/wncsoldier/stylesheets/page.css'
        'bundles/wncsoldier/stylesheets/app.css'
        'bundles/wncsoldier/stylesheets/ui-lightness/jquery.css'
        'bundles/wncsoldier/javascripts/uploadify/uploadify.css'
        'bundles/wncsoldier/javascripts/chosen/chosen.css'
        output='css/total.css' filter='cssrewrite'
        %}
        <link rel="stylesheet"  href="{{ asset_url }}" media="screen" >
    {% endstylesheets %}


	<!--[if lt IE 9]>
		<link rel="stylesheet" href="public/css/ie.css">
	<![endif]-->
{% endblock stylesheets %}
	

<!--[if lt IE 9]>
<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
<![endif]-->


</head>
<body class="sonata-bc">

{% block page_top_bar %}
    {% if app.security.isGranted(['ROLE_SONATA_PAGE_ADMIN_PAGE_EDIT', 'ROLE_PREVIOUS_ADMIN']) %}
        <ul class="nav-bar" id="cms_nav">
            <li><a href="#">CMS PANEL</a></li>
            {% if app.security.isGranted('ROLE_SONATA_ADMIN') %}
                <li><a href="{{ path('sonata_admin_dashboard') }}">{{ "header.sonata_admin_dashboard"|trans({}, 'SonataPageBundle') }}</a></li>
            {% endif %}
            {% if app.security.isGranted('ROLE_SONATA_PAGE_ADMIN_PAGE_EDIT') %}
                {% set sites = sonata_page.siteavailables %}

                {% if sites|length > 1 %}
                    <li class="has-flyout">
                        <a href="#">{{ site.name }}</a>
                        <a href="#" class="flyout-toggle"><span> </span></a>
                        <ul class="flyout">
                            {% for site in sites %}
                                <li><a href="{{ site.url }}">{{ site.name }}</a></li>
                            {% endfor %}
                        </ul>
                    </li>
                {% endif %}
                
                <li class="has-flyout">
                    <a href="#">Page</a>
                    <a href="#" class="flyout-toggle"><span> </span></a>
                    <ul class="flyout">
                        <li><a href="{{ path('admin_sonata_page_page_edit', {'id': page.id }) }}" target="_new">{{ "header.edit_page"|trans({}, 'SonataPageBundle') }}</a></li>
                        <li><a href="{{ path('admin_sonata_page_page_snapshot_create', {'id': page.id }) }}" target="_new">{{ "header.create_snapshot"|trans({}, 'SonataPageBundle') }}</a></li>
                        <li class="divider"></li>
                        <li><a href="{{ path('admin_sonata_page_page_list') }}" target="_new">{{ "header.view_all_pages"|trans({}, 'SonataPageBundle') }}</a></li>

                        {% if error_codes|length %}
                            <li class="divider"></li>
                            <li><a href="{{ path('sonata_page_exceptions_list') }}" target="_new">{{ "header.view_all_exceptions"|trans({}, 'SonataPageBundle') }}</a></li>
                        {% endif %}
                    </ul>
                </li>

                {% if not page.enabled %}
                    <li><span style="padding-left: 20px; background: red;"><strong><em>{{ 'header.page_is_disabled'|trans([], 'SonataPageBundle') }}</em></strong></span></li>
                {% endif %}

                <li class="has-flyout">
                    <a href="#">Show blocks</a> 
                    <a class="flyout-toggle"><span> </span></a> 
                    <div class="flyout large left" style="display: none; ">
                            <form class="form-inline">
                                <label for="page-action-enabled-edit"><input type="checkbox" id="page-action-enabled-edit" />{{ 'header.show_zone'|trans({}, 'SonataPageBundle') }}</label>
                                <input type="submit" class="btn" value="{{ 'btn_save_position'|trans({}, 'SonataPageBundle') }}" id="page-action-save-position" />
                            </form>
                    </div>
                </li>
            {% endif %}

            {% if app.security.isGranted('ROLE_PREVIOUS_ADMIN') %}
                <li><a href="{{ url('homepage', {'_switch_user': '_exit'}) }}">{{ "header.switch_user_exit"|trans({}, 'SonataPageBundle')}}</a></li>
            {% endif %}
        </ul>
    {% endif %}
{% endblock %}

{% block page_container %}
<!-- Header Content -->
<header>
	<div class="container">
	
        <div class="row">
            <div class="twelve columns">

                <div class="jumbotron homepage">
                    <img src="http://placehold.it/940x300" class="bg" />
                    <div class="six columns login-form">{% render "WNCSoldierBundle:Default:login" %}</div>
                </div>

            </div>
        </div>	

		<div class="row">
			<div class="twelve columns">
				<nav>

                    <ul class="nav-bar">
                       
						<li><a href="{{ path('soldier') }}">Soldiers</a></li>
						<li><a href="{{ path('user') }}">Participants</a></li>
						<li><a href="{{ path('fos_user_registration_register') }}">Register</a></li>
						<li><a href="blog/">Settings</a></li>
                    </ul>
				</nav>
			</div>
		</div>
	
	</div>
</header>
	<div class="container">
		
		<div class="row">
			<div class="twelve columns">		

            {% if content is defined %}
                {{ content|raw }}
            {% else %}                    
                {% set content = block('content') %}
                {% if content|length > 0 %}
                    {{ content|raw }}
                {% else %}
                    {{ sonata_page_render_container('content', page) }}
                {% endif %}
            {% endif %}
			</div>
		</div>
		
		
	</div><!-- container -->
<!-- Footer Content -->

	<footer>
<div class="container">
			<div class="row">
    {{ sonata_page_render_container('footer', 'global') }}
</div>
</div>
	</footer>
    {% block javascripts %}
    
             {% if page is defined %}
            <script>
                {{ page.javascript|raw }}
            </script>

            <style>
                {{ page.stylesheet|raw }}
            </style>

            {% endif %}

            {#
                These includes can be done only at this point as all blocks are loaded,
                Limition : this does not work if a global page is loaded from an ESI tag inside a container block
            #}
            {{ sonata_block_include_stylesheets('screen') }}
            {{ sonata_block_include_javascripts('screen') }}


            <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>
            <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.8.23/jquery-ui.min.js"></script>
            <script src="{{ asset('bundles/sonatajquery/jquery-ui-i18n.js') }}" type="text/javascript"></script>
            {% javascripts 
                'bundles/wncsoldier/javascripts/foundation.min.js'
                'bundles/wncsoldier/javascripts/app.js'
                'bundles/sonatajquery/jquery-ui-1.8.23.js'
                'bundles/wncsoldier/javascripts/uploadify/jquery.uploadify.min.js'
                'bundles/wncsoldier/javascripts/chosen/chosen.jquery.min.js'
                
                output='js/all.js'
                %}
                <script src="{{ asset_url }}"></script>

                

            {% endjavascripts %}
    
    {% endblock %}

    {% if app.security.isGranted(['ROLE_SONATA_PAGE_ADMIN_PAGE_EDIT', 'ROLE_PREVIOUS_ADMIN']) %}

        <script src="{{ asset('bundles/sonatapage/page.js') }}" type="text/javascript"></script>
        <script>
                        Page.url = {
                            block_save_position: '{{ path('admin_sonata_page_block_savePosition') }}',
                            block_edit:   '{{ path('admin_sonata_page_block_edit', {'id': 'BLOCK_ID'}) }}',
                            page_edit:    '{{ path('admin_sonata_page_page_edit', {'id': page.id }) }}'
                        }
        </script>
    {% endif %}
{% endblock %}
