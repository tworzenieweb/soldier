{% extends 'WNCSoldierBundle::layout.html.twig' %}



{% block content %}	

<h2>Press</h2>

<div class="sonata-blog-post-list row">
    {% for post in pager.getResults() %}
        <div class="sonata-blog-post-container twelve columns">
            <h5 class="sonata-blog-post-title">
                <a href="{{ url('sonata_news_view', { 'permalink': sonata_news_permalink(post) }) }}">{{ post.title }}</a> <span class="sonata-blog-post-comments-count secondary label">{{ 'comments_count'|trans({'%comments_count%': post.commentsCount }, 'SonataNewsBundle') }}</span>
            </h5>
            <div class="sonata-blog-post-date-container">
                {{ post.publicationDateStart | format_date }}
            </div>

            <div class="sonata-blog-post-abtract space-15">
                {{ post.abstract }}
                <a href="{{ url('sonata_news_view', { 'permalink': sonata_news_permalink(post) }) }}" class="continue">Read on</a>
            </div>
        </div>
    {% else %}
        {{ 'no_post_found'|trans({}, 'SonataNewsBundle') }}
    {% endfor %}
</div>

{% endblock %}